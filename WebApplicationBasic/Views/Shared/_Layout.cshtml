<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationBasic</title>

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/material-design-lite/material.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">

        <link rel="stylesheet" href="~/lib/material-design-lite/material.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <script src="~/lib/material-design-lite/material.js" type="text/javascript"></script>

    <style>
        main {
            padding: 15px;
        }

        .mdl-card {
            margin-bottom: 20px;
        }

    </style>

    <style>
        .demo-card-wide.mdl-card {
            width: 100%;
            max-width: 512px;
        }

        .demo-card-wide > .mdl-card__title {
            color: #fff;
            height: 176px;
            background: url('/images/welcome_card.jpg') center / cover;
        }

        .demo-card-wide > .mdl-card__menu {
            color: #fff;
        }
    </style>

    <!-- Square card -->
    <style>
        .demo-card-square.mdl-card {
            width: 100%;
            max-width: 512px;
            height: 320px;
        }

        .demo-card-square > .mdl-card__title {
            color: #fff;
            background: url('/images/dog.png') bottom right 15% no-repeat #46B6AC;
        }
    </style>

    <style>
        .demo-card-image.mdl-card {
            width: 256px;
            height: 256px;
            background: url('/images/image_card.jpg') center / cover;
        }

        .demo-card-image > .mdl-card__actions {
            height: 52px;
            padding: 16px;
            background: rgba(0, 0, 0, 0.2);
        }

        .demo-card-image__filename {
            color: #fff;
            font-size: 14px;
            font-weight: 500;
        }
    </style>

    <!-- Event card -->
    <style>
        .demo-card-event.mdl-card {
            width: 256px;
            height: 256px;
            background: #3E4EB8;
        }

        .demo-card-event > .mdl-card__actions {
            border-color: rgba(255, 255, 255, 0.2);
        }

        .demo-card-event > .mdl-card__title {
            align-items: flex-start;
        }

            .demo-card-event > .mdl-card__title > h4 {
                margin-top: 0;
            }

        .demo-card-event > .mdl-card__actions {
            display: flex;
            box-sizing: border-box;
            align-items: center;
        }

            .demo-card-event > .mdl-card__actions > .material-icons {
                padding-right: 10px;
            }

            .demo-card-event > .mdl-card__title,
            .demo-card-event > .mdl-card__actions,
            .demo-card-event > .mdl-card__actions > .mdl-button {
                color: #fff;
            }
    </style>

    <style>
        .mdl-grid > .mdl-cell {
            background-color: #BDBDBD;
            height: 200px;
            padding-left: 8px;
            padding-top: 4px;
            color: white;
        }
    </style>

    <style>
        section {
            text-align:center
        }
    </style>
</head>
<body>
    <navigation fixed-header="true">

        <navigation-header>
            <navigation-header-row>
                <navigation-title>@ViewData["Title"]</navigation-title>
                <navigation-spacer></navigation-spacer>
                <navigation-link-list>
                    <navigation-link-list-item href="#bla"><button raised="true" ripple="true" accent="true"><icon>more</icon></button></navigation-link-list-item>
                </navigation-link-list>
            </navigation-header-row>
            <navigation-header-tab-bar>
                <navigation-header-tab-bar-item href="#tab1">Badges</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab2">Buttons</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab3">Cards</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab4">Chips</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab5">Layout</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab6">Lists</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab7" active="true">Loading</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab8">Menu</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab9">Sliders</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab10">Snackbar</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab11">Toggles</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab12">Tables</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab13">Text Fields</navigation-header-tab-bar-item>
                <navigation-header-tab-bar-item href="#tab14">Tooltips</navigation-header-tab-bar-item>
            </navigation-header-tab-bar>
        </navigation-header>
        <navigation-drawer>
            <navigation-header>
                <navigation-header-row>
                    <navigation-title>@ViewData["Title"]</navigation-title>
                </navigation-header-row>
            </navigation-header>
            <navigation-link-list>
                <navigation-link-list-item href="/test"></navigation-link-list-item>
            </navigation-link-list>
        </navigation-drawer>
        <navigation-main>
            @RenderBody()
        </navigation-main>
    </navigation>

    <environment names="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)

</body>
</html>
