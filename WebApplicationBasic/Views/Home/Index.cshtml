@{
    ViewData["Title"] = "Demo Page";
}


<mdl-tab-layout>
    <mdl-tab-layout-bar>
        <mdl-tab-layout-link for="badge-tab">Badges</mdl-tab-layout-link>
        <mdl-tab-layout-link for="buttons-tab" active="true">Buttons</mdl-tab-layout-link>
        <mdl-tab-layout-link for="cards-tab">Cards</mdl-tab-layout-link>
        <mdl-tab-layout-link for="chips-tab">Chips</mdl-tab-layout-link>
        <mdl-tab-layout-link for="dialogs-tab">Dialogs</mdl-tab-layout-link>
        <mdl-tab-layout-link for="lists-tab">Lists</mdl-tab-layout-link>
        <mdl-tab-layout-link for="loading-tab">Loading</mdl-tab-layout-link>
        <mdl-tab-layout-link for="menus-tab">Menus</mdl-tab-layout-link>
        <mdl-tab-layout-link for="sliders-tab">Sliders</mdl-tab-layout-link>
        <mdl-tab-layout-link for="snackbars-tab">Snackbars</mdl-tab-layout-link>
        <mdl-tab-layout-link for="textfields-tab">TextFields</mdl-tab-layout-link>
        <mdl-tab-layout-link for="toggles-tab">Toggles</mdl-tab-layout-link>
        <mdl-tab-layout-link for="tooltips-tab">Tooltips</mdl-tab-layout-link>
        <mdl-tab-layout-link for="typography-tab">Typography</mdl-tab-layout-link>
    </mdl-tab-layout-bar>

    <mdl-tab-layout-content id="badge-tab">
        <mdl-badge value="1" icon="true">account_box</mdl-badge>
        <mdl-badge value="1">Inbox</mdl-badge>
    </mdl-tab-layout-content>
    <mdl-tab-layout-content id="buttons-tab">
        <mdl-button fab="true" colored="true" icon="true">add</mdl-button>
        <mdl-button fab="true" colored="true" icon="true" ripple="true">add</mdl-button>
        <mdl-button fab="true" icon="true">add</mdl-button> <!-- Plain -->
        <mdl-button fab="true" ripple="true" icon="true">add</mdl-button>
        <mdl-button fab="true" ripple="true" disabled icon="true">add</mdl-button>

        <!-- Text Buttons -->

        <mdl-button raised="true">BUTTON</mdl-button>
        <mdl-button raised="true" ripple="true">BUTTON</mdl-button>
        <mdl-button raised="true" ripple="true" disabled>BUTTON</mdl-button>
        <mdl-button raised="true" colored="true">BUTTON</mdl-button>
        <mdl-button raised="true" colored="true" accent="true">BUTTON</mdl-button>
        <mdl-button raised="true" ripple="true" colored="true" accent="true">BUTTON</mdl-button>

        <!-- Flat Buttons -->
        <mdl-button>BUTTON</mdl-button>
        <mdl-button ripple="true">BUTTON</mdl-button>
        <mdl-button ripple="true" disabled>BUTTON</mdl-button>
        <mdl-button primary="true">BUTTON</mdl-button>
        <mdl-button accent="true">BUTTON</mdl-button>

        <!-- Icons -->
        <mdl-button icon="true">mood</mdl-button>
        <mdl-button icon="true" colored="true">mood</mdl-button>

        <!-- Mini -->
        <mdl-button fab="true" mini="true" icon="true">add</mdl-button>
        <mdl-button fab="true" mini="true" icon="true" colored="true">add</mdl-button>
    </mdl-tab-layout-content>
    <mdl-tab-layout-content id="cards-tab">test 3</mdl-tab-layout-content>
    <mdl-tab-layout-content id="chips-tab">
        <mdl-chip>CHIP</mdl-chip>
        <mdl-chip is-button="true">CHIP</mdl-chip>
        <mdl-chip is-contact="true">CHIP</mdl-chip>
        <mdl-chip is-deletable-contact="true" src="https://getmdl.io/templates/dashboard/images/user.jpg">CHIP</mdl-chip>
    </mdl-tab-layout-content>
    <mdl-tab-layout-content id="dialogs-tab">test 5</mdl-tab-layout-content>
    <mdl-tab-layout-content id="lists-tab">
        <mdl-list>
            <mdl-list-item>
                <mdl-list-item-content>Bryan Cranston</mdl-list-item-content>
                <mdl-list-item-content>Aaron Paul</mdl-list-item-content>
                <mdl-list-item-content>Bob Odenkirk</mdl-list-item-content>
            </mdl-list-item>
        </mdl-list>
    </mdl-tab-layout-content>
    <mdl-tab-layout-content id="loading-tab" active="true">
        <mdl-loading>
            this.MaterialProgress.setProgress(50);
        </mdl-loading>
        <br />
        <mdl-loading intermediate="true"></mdl-loading>
        <br />
        <mdl-loading>
            this.MaterialProgress.setProgress(33);
            this.MaterialProgress.setBuffer(87);
        </mdl-loading>
    </mdl-tab-layout-content>
    <mdl-tab-layout-content id="menus-tab">test 8</mdl-tab-layout-content>
    <mdl-tab-layout-content id="sliders-tab">test 9</mdl-tab-layout-content>
    <mdl-tab-layout-content id="snackbars-tab">test 10</mdl-tab-layout-content>
    <mdl-tab-layout-content id="textfields-tab">test 11</mdl-tab-layout-content>
    <mdl-tab-layout-content id="toggles-tab">test 12</mdl-tab-layout-content>
    <mdl-tab-layout-content id="tooltips-tab">test 13</mdl-tab-layout-content>
    <mdl-tab-layout-content id="typography-tab">test 14</mdl-tab-layout-content>
</mdl-tab-layout>